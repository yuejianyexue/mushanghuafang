<view>
<!-- 分类页容器 -->
<!-- 搜索栏 -->
<view class="search"> 搜索栏占位</view>
<view class="cate-ctnr" >
  <!--分类页左侧导航  -->
  <scroll-view class="cate-left" scroll-y>
    <view catch:tap="itemActive" data-x="{{index}}" class="cate-item {{tab==index &&'active'}}" wx:for="{{itemList}}" >{{item}}</view>
  </scroll-view>
  <!-- 右侧选项 -->
  <scroll-view class="cate-right" scroll-y>
    <view wx:for="{{10}}" wx:key="index" class="item-right">
    <navigator class="navigator" url="#">
    <image src="../../assets/images/cate-1.png" mode=""/>
    <text class="itemText">品类{{index+1}}</text>
    </navigator>
    </view>
  </scroll-view>
</view>
</view>